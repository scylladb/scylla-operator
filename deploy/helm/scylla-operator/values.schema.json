{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "affinity": {
            "type": "object"
        },
        "image": {
            "type": "object",
            "properties": {
                "pullPolicy": {
                    "type": "string"
                },
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "logLevel": {
            "type": "integer"
        },
        "nodeSelector": {
            "type": "object"
        },
        "resources": {
            "type": "object",
            "properties": {
                "limits": {
                    "additionalProperties": {
                        "anyOf": [
                            {"type": "string"},
                            {"type": "integer"}
                        ]
                    },
                    "type": "object"
                },
                "requests": {
                    "additionalProperties": {
                        "anyOf": [
                            {"type": "string"},
                            {"type": "integer"}
                        ]
                    },
                    "type": "object"
                }
            }
        },
        "serviceAccount": {
            "type": "object",
            "properties": {
                "annotations": {
                    "type": "object"
                },
                "create": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        "securityContext": {
            "type": "object"
        },
        "tolerations": {
            "type": "array"
        },
        "webhook": {
            "type": "object",
            "properties": {
                "certificateSecretName": {
                    "type": "string"
                },
                "createSelfSignedCertificate": {
                    "type": "boolean"
                }
            }
        }
    }
}
