                    "scyllaConfig": {
                        "type": "string"
                    },
                    "storage": {
                        "type": "object",
                        "properties": {
                            "capacity": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "repairs": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "host": {
                        "type": "string"
                    },
                    "dc": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "keyspace": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "intensity": {
                       "type": "string"
                    },
                    "interval": {
                       "type": "string"
                    },
                    "name": {
                       "type": "string"
                    },
                    "smallTableThreshold": {
                       "type": "string"
                    },
                    "startDate": {
                       "type": "string"
                    },
                    "failFast": {
                        "type": "boolean"
                    },
                    "numRetries": {
                        "type": "integer"
                    },
                    "parallel": {
                       "type": "integer"
                    }
                },
                "required": [
                    "name"
                ]
            }
        },
        "scyllaImage": {
            "type": "object",
            "properties": {
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "sysctls": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "serviceMonitor": {
            "type": "object",
            "properties": {
                "create": {
                    "type": "boolean"
                }
            }
        }
