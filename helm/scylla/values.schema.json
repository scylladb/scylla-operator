                    "name": {
                        "type": "string"
                    },
                    "resources": {
                        "type": "object",
                        "properties": {
                            "limits": {
                                "type": "object",
                                "properties": {
                                    "cpu": {
                                        "type": "integer"
                                    },
                                    "memory": {
                                        "type": "string"
                                    }
                                }
                            },
                            "requests": {
                                "type": "object",
                                "properties": {
                                    "cpu": {
                                        "type": "integer"
                                    },
                                    "memory": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    },
                    "agentResources": {
                        "type": "object",
                        "properties": {
                            "limits": {
                                "type": "object",
                                "properties": {
                                    "cpu": {
                                        "type": "integer"
                                    },
                                    "memory": {
                                        "type": "string"
                                    }
                                }
                            },
                            "requests": {
                                "type": "object",
                                "properties": {
                                    "cpu": {
                                        "type": "integer"
                                    },
                                    "memory": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    },
                    "volumes": {
                        "type": "array"
                    },
                    "volumeMounts": {
                        "type": "array"
                    },
                    "agentVolumeMounts": {
                        "type": "array"
                    },
                    "placement": {
                        "type": "object",
                        "properties": {
                            "podAffinity": {
                                "type": "object"
                            },
                            "podAntiAffinity": {
                                "type": "object"
                            },
                            "nodeAffinity": {
                                "type": "object"
                            },
                            "tolerations": {
                                "type": "array",
                                "items": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "scyllaAgentConfig": {
                        "type": "string"
