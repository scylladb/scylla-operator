{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "agentImage": {
            "type": "object",
            "properties": {
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "rbac": {
            "type": "object",
            "properties": {
                "clusterRole": {
                    "type": "object",
                    "properties": {
                        "rules": {
                            "type": "array",
                            "items": {
                                "type": "object"
                            }
                        }
                    }
                }
            }
        },
        "alternator": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "port": {
                    "type": "integer"
                },
                "writeIsolation": {
                    "type": "string"
                }
            }
        },
        "automaticOrphanedNodeCleanup": {
            "type": "boolean"
        },
        "backups": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "dc": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "keyspace": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "interval": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "startDate": {
                        "type": "string"
                    },
                    "numRetries": {
                        "type": "integer"
                    },
                    "location": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "retention": {
                        "type": "integer"
                    },
                    "snapshotParallel": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "uploadParallel": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": [
                    "name",
                    "location"
                ]
            }
        },
        "cpuset": {
            "type": "boolean"
        },
        "datacenter": {
            "type": "string"
