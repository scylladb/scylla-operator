apiVersion: scylla.scylladb.com/v1
kind: ScyllaCluster
metadata:
  generateName: basic-
spec:
  version: 5.2.7
  agentVersion: 3.1.0
  developerMode: true
  {{ with .exposeOptions }}
  exposeOptions:
    {{- . | toYAML | nindent 4 }}
  {{ end }}
  datacenter:
    name: us-east-1
    racks:
    - name: us-east-1a
      members: 1
      storage:
        capacity: 500Mi
      resources:
        requests:
          cpu: 10m
          memory: 100Mi
        limits:
          cpu: 1
          memory: 1Gi
